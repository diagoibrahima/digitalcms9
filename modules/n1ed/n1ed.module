/**
 * Implements hook_library_info_alter().
 */
function n1ed_library_info_alter(&$libraries, $extension) {
  if ($extension === 'ckeditor' && isset($libraries['drupal.ckeditor'])) {
    $libraries['drupal.ckeditor']['dependencies'][] = 'n1ed/n1ed.loading';
  }
}
